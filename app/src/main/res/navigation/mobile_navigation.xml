<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_map">

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.nttapp.greeeyes.ui.map.MapFragment"
        android:label="Bản đồ"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/navigation_tracking"
        android:name="com.nttapp.greeeyes.ui.tracking.TrackingFragment"
        android:label="Theo dõi"
        tools:layout="@layout/fragment_tracking" />

    <fragment
        android:id="@+id/navigation_pet"
        android:name="com.nttapp.greeeyes.ui.pet.PetFragment"
