        tools:layout="@layout/fragment_pet" />

    <fragment
        android:id="@+id/navigation_rank"
        android:name="com.nttapp.greeeyes.ui.rank.RankFragment"
        android:label="Xếp hạng"
        tools:layout="@layout/fragment_rank" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.nttapp.greeeyes.ui.notifications.NotificationsFragment"
        android:label="Thông báo"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_personal"
        android:name="com.nttapp.greeeyes.ui.personal.PersonalFragment"
        android:label="Cá nhân"
        tools:layout="@layout/fragment_personal" />

